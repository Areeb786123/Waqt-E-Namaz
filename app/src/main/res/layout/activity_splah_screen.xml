<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Splah_screen">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="57dp"

                android:fontFamily="@font/delius_swash_caps"
                android:gravity="center_horizontal"
                android:text="Waqt-E-Namaz"
                android:textAlignment="center"
                android:textColor="#6E3CAD"
                android:textSize="32dp"
                android:textStyle="bold">

            </TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:fontFamily="@font/aclonica"
                android:gravity="center_horizontal"
                android:text="Timing of Namz "
                android:textAlignment="center"
                android:textSize="15dp"></TextView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:fontFamily="@font/aclonica"
                android:gravity="center_horizontal"
                android:text="Digital Calculator and many more"
                android:textAlignment="center"
                android:textSize="12dp"></TextView>

        </LinearLayout>
        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:progressBackgroundTintMode="add">


        </ProgressBar>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="455dp"
            android:layout_marginTop="18dp"
            android:layout_marginLeft="46dp"
            app:cardCornerRadius="15dp"
            android:layout_marginRight="46dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/logo"
                android:scaleType="centerCrop"
                >


            </ImageView>
        </androidx.cardview.widget.CardView>
            <Button
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_marginTop="432dp"
                android:layout_marginRight="96dp"
                android:layout_marginLeft="96dp"
                android:background="@drawable/splah_btn"
                android:text="Never forget Salah"
                android:textColor="@color/black"></Button>


        </RelativeLayout>



    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>